<p>
  <strong>Title: </strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text: </strong>
  <%= @post.text %>
</p>

<%= render @post.tags %>

<strong> Add a tag: </strong>
<%= form_for([@post, @post.tags.build]) do |f| %>
  <p>
    <%= f.label :tag %><br>
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back', posts_path %> |
<%= link_to 'Edit', edit_post_path(@post) %>